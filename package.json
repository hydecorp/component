{
  "name": "@hydecorp/component",
  "version": "1.0.0-alpha.1",
  "description": "",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "files": [
    "src",
    "lib",
    "typings"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "test": "exit 0",
    "build": "tsc -d --outDir lib",
    "watch": "tsc -d --outDir lib -w",
    "preversion": "sed -i '' -E 's:^(lib)$:#<removed temporarily>\\1:' .gitignore",
    "version": "npm run build && git add .",
    "postversion": "sed -i '' -E 's:^#<removed temporarily>(lib)$:\\1:' .gitignore && git rm --cached -r lib && git add . && git commit -m 'Restore preversion .gitignore'",
    "prepack": "npm run clean && npm run build"
  },
  "dependencies": {
    "lit-element": "^2.3.1",
    "rxjs": "^7.0.0-beta.0"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "MIT"
}
